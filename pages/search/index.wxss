/* pages/search/index.wxss */
page {
    background-color: rgb(243, 243, 243);
    padding: 20rpx;
  }
  .search_row {
    height: 60rpx;
    display: flex;
  }
  .search_row input {
    background-color: #fff;
    flex: 4;
    height: 100%;
    padding-left: 30rpx;
  }
  .search_row button {
    width: 110rpx;
    height: 100%;
    padding: 0;
    margin: 0 10rpx;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
  }
  .search_content {
    margin-top: 30rpx;
  }

  .book_detail{
    margin: 20rpx 0rpx;
    padding: 5rpx 20rpx ;
    display: flex;
    background-color: #fff;
    height: 180rpx;
    align-items: center;
  }
  
  .book_detail_text,.book_detail_image image{
    flex:1
  }

  
  .book_name{
    font-size: 35rpx;
    letter-spacing: 3rpx;
  }
  
  .book_press,.author{
    color: rgb(121, 121, 121);
    letter-spacing: 3rpx;
  }
  
  
  .book_feature {
    display: flex;
  }
  .book_class{
    font-size: 30rpx;
    background-color: #6ac894;
    border-radius: 10rpx;
    color: #fff;
  }
  
  .book_wear{
    margin-left: 15rpx;
    font-size: 30rpx;
    background-color: #6ac894;
    border-radius: 10rpx;
    color: #fff;
  }
  
  .book_detail .book_detail_image{
    width: 160rpx;
  }
  